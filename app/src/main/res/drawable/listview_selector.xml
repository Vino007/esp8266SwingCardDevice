<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 选择的时候状态 -->
	<item android:state_selected="true">
		<shape>
			<gradient android:angle="270" android:endColor="#99BD4C" 
				android:startColor="#99BD4C"  />
			
			<padding android:left="15dp" android:top="20dp" 
			    	 android:right="15dp" android:bottom="20dp" />
			<!-- 圆角 -->               
			<corners                    
			    	 android:radius="15dp" /> 
		</shape>
	</item>
	<!-- 下压的时候状态 -->
	<item android:state_pressed="true">
		<shape>
		    <!-- 颜色渐变 -->
			<gradient android:angle="270" android:endColor="#99BD4C" 
				android:startColor="#A5D245" />			
			<padding android:left="15dp" android:top="20dp" 
			    	 android:right="15dp" android:bottom="20dp" />
			<corners                    
			    	 android:radius="15dp" /> 
		</shape>
	</item>
	
	<!-- 普通显示的时候状态 -->
	<item>
		<shape>
			<gradient android:angle="270" android:endColor="#A8C3B0" 
				android:startColor="#C6CFCE" />
			
			<padding android:left="15dp" android:top="20dp" 
			    	 android:right="15dp" android:bottom="20dp" />
			<corners                    
			    	 android:radius="15dp" /> 
		</shape>
	</item>
</selector>